<h1>This is Single Post page</h1>

<%= image_tag @post.post_photo, style: 'width: 200px;' %>
<%= @post.caption %>

<% if current_user != nil %>
  <%= form_for [@post, @comment] do |f| %>
    <%= f.text_field :content %>
    <%= f.submit 'comment' %>
  <% end %>
<% end %>

<% @comments.each do |comment| %>
  <%= comment.user.username %> :
  <br>
  <%= comment.content %>
<% end %>
